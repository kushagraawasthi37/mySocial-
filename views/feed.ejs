<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Feed</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 text-white min-h-screen p-6">

  <!-- Top Bar -->
  <header class="flex justify-between items-center px-6 py-4 bg-zinc-800 shadow-md mb-8">
    <h1 class="text-3xl font-bold text-yellow-400">üåê Feed</h1>
    <div class="flex items-center space-x-4">
      <a href="/profile" class="bg-blue-500 hover:bg-blue-600 px-4 py-2 rounded-lg text-sm font-medium transition">
        My Profile
      </a>
      <div class="relative">
        <button id="accountDropdownBtn"
          class="bg-red-500 hover:bg-red-600 px-4 py-2 rounded-lg text-sm font-semibold transition">
          Account ‚öôÔ∏è
        </button>
        <div id="accountDropdownMenu"
          class="hidden absolute right-0 mt-2 w-56 bg-zinc-800 border border-zinc-700 rounded-lg shadow-lg z-50">
          <a href="/logout" class="block px-4 py-2 text-white hover:bg-red-600 rounded-t-lg transition">Logout</a>
          <a href="/delete-account/<%= user.username %>"
            class="block px-4 py-2 text-white hover:bg-red-700 rounded-b-lg transition">Delete Account</a>
        </div>
      </div>
    </div>
  </header>

  <!-- Posts Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% posts.forEach(post=> { %>
      <div class="bg-zinc-800 rounded-2xl shadow-md border border-zinc-700 p-4 flex flex-col">

        <!-- User Info -->
        <div class="flex items-center mb-3">
          <% if (post.user.avatar) { %>
            <img src="<%= post.user.avatar %>" alt="avatar"
              class="w-12 h-12 rounded-full object-cover border border-white">
            <% } else { %>
              <div
                class="w-12 h-12 rounded-full bg-gradient-to-r from-blue-400 to-purple-500 flex items-center justify-center font-bold text-white">
                <%= post.user.username.charAt(0).toUpperCase() %>
              </div>
              <% } %>
                <h3 class="ml-3 text-lg font-semibold text-blue-400">
                  <a href="/feed/profile/<%= post.user.username %>">
                    <%= post.user.username %>
                  </a>
                </h3>
        </div>

        <!-- Post Image -->
        <% if (post.fileContent) { %>
          <img src="<%= post.fileContent %>" alt="Post Image"
            class="w-full max-h-64 object-cover rounded-lg mb-3 border border-zinc-700">
          <% } %>

            <!-- Post Text -->
            <p class="text-zinc-300 text-sm mb-3">
              <%= post.content %>
            </p>

            <!-- Actions -->
            <div class="flex justify-between items-center text-sm mt-auto">
              <span class="text-zinc-400">
                <%= (post.likes || []).length %> ‚ù§Ô∏è
              </span>
              <% const safeLikes=(post.likes || []).map(like=> like?.toString()); %>
                <% if (safeLikes.includes(userId)) { %>
                  <a href="/like/<%= post._id %>"
                    class="px-3 py-1 rounded-lg bg-green-600 hover:bg-green-700 text-white font-medium transition">Liked</a>
                  <% } else { %>
                    <a href="/like/<%= post._id %>"
                      class="px-3 py-1 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-medium transition">Like</a>
                    <% } %>
            </div>

      </div>
      <% }) %>
  </div>

  <script>
    const accountDropdownBtn = document.getElementById('accountDropdownBtn');
    const accountDropdownMenu = document.getElementById('accountDropdownMenu');
    accountDropdownBtn.addEventListener('click', () => accountDropdownMenu.classList.toggle('hidden'));
    window.addEventListener('click', (e) => {
      if (!accountDropdownBtn.contains(e.target) && !accountDropdownMenu.contains(e.target)) {
        accountDropdownMenu.classList.add('hidden');
      }
    });
  </script>

</body>

</html>