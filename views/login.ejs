<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - MySocial</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 text-white flex items-center justify-center min-h-screen p-4">

    <div class="w-full max-w-md bg-zinc-800 rounded-2xl shadow-lg p-6 sm:p-8">

        <!-- Header -->
        <h2 class="text-2xl sm:text-3xl font-bold text-center mb-5 sm:mb-6">Login</h2>

        <!-- Flash Messages -->
        <% if (typeof success_msg !=="undefined" && success_msg) { %>
            <div
                class="flash-message bg-green-500 text-white p-3 rounded-lg mb-4 text-center font-medium shadow-md text-sm sm:text-base">
                <%= success_msg %>
            </div>
            <% } %>

                <% if (typeof error_msg !=="undefined" && error_msg) { %>
                    <div
                        class="flash-message bg-red-500 text-white p-3 rounded-lg mb-4 text-center font-medium shadow-md text-sm sm:text-base">
                        <%= error_msg %>
                    </div>
                    <% } %>

                        <% if (typeof message !=="undefined" && message) { %>
                            <div
                                class="flash-message bg-yellow-500 text-white p-3 rounded-lg mb-4 text-center font-medium shadow-md text-sm sm:text-base">
                                <%= message %>
                            </div>
                            <% } %>

                                <!-- Form -->
                                <form action="/login" method="post" class="space-y-4">
                                    <input type="email" name="email" placeholder="Email Address" required
                                        class="w-full px-4 py-3 sm:py-4 text-sm sm:text-base outline-none bg-zinc-900 border border-zinc-700 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition" />

                                    <input type="password" name="password" placeholder="Password" required
                                        class="w-full px-4 py-3 sm:py-4 text-sm sm:text-base outline-none bg-zinc-900 border border-zinc-700 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition" />

                                    <!-- Forgot Password Link -->
                                    <div class="text-right">
                                        <a href="/forgot-password"
                                            class="text-blue-400 hover:underline text-sm sm:text-base">
                                            Forgot Password?
                                        </a>
                                    </div>

                                    <button type="submit"
                                        class="w-full py-3 sm:py-4 bg-blue-500 hover:bg-blue-600 rounded-lg font-semibold text-sm sm:text-lg transition">
                                        Login
                                    </button>
                                </form>

                                <!-- Footer -->
                                <p class="text-center text-zinc-400 mt-5 sm:mt-6 text-sm sm:text-base">
                                    Donâ€™t have an account?
                                    <a href="/register" class="text-blue-400 hover:underline">Register here</a>
                                </p>
    </div>

    <!-- Auto-hide flash messages -->
    <script>
        setTimeout(() => {
            document.querySelectorAll(".flash-message").forEach(el => {
                el.style.transition = "opacity 0.5s ease";
                el.style.opacity = "0";
                setTimeout(() => el.remove(), 500);
            });
        }, 4000);
    </script>
</body>

</html>