<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= user.username %> - Profile
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 text-white min-h-screen">

    <!-- Top Bar -->
    <header class="flex justify-between items-center px-8 py-4 bg-zinc-800 shadow-md mb-8">
        <h1 class="text-2xl font-bold text-blue-400">MySocial</h1>
        <div class="flex items-end">
            <form action="/search/user" method="GET" class="flex items-center space-x-2">
                <button type="submit"
                    class="bg-blue-500 hover:bg-blue-600 px-6 py-2 rounded-lg text-sm font-medium transition mx-3">
                    Search
                </button>
            </form>
            <div class="space-x-4 flex items-center">
                <a href="/feed"
                    class="bg-green-500 hover:bg-green-600 px-4 py-2 rounded-lg text-sm font-semibold transition">Feed</a>
                <div class="relative">
                    <button id="accountDropdownBtn"
                        class="bg-red-500 hover:bg-red-600 px-4 py-2 rounded-lg text-sm font-semibold transition">
                        Account ⚙️
                    </button>
                    <div id="accountDropdownMenu"
                        class="hidden absolute right-0 mt-2 w-56 bg-zinc-800 border border-zinc-700 rounded-lg shadow-lg z-50">
                        <a href="/logout"
                            class="block px-4 py-2 text-white hover:bg-red-600 rounded-t-lg transition">Logout</a>
                        <a href="/delete-account/<%= user.username %>"
                            class="block px-4 py-2 text-white hover:bg-red-700 rounded-b-lg transition">Delete
                            Account</a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="max-w-4xl mx-auto p-6">

        <!-- Cover Image -->
        <div class="relative w-full h-48 mb-6 group">
            <img src="<%= user.coverImage || '/Images/default/cover.jpg' %>" alt="Cover Image"
                class="w-full h-48 object-cover rounded-lg shadow-md cursor-pointer transition-transform duration-200 group-hover:scale-105"
                id="coverPreview">
            <form action="/profile/cover" method="POST" enctype="multipart/form-data">
                <input type="file" name="coverImage" id="coverInput" class="hidden" accept="image/*">
            </form>
            <div class="absolute bottom-2 right-2 bg-blue-500 text-white rounded-full p-2 shadow-md cursor-pointer opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                id="changeCoverBtn">✎</div>
        </div>

        <div class="flex items-center space-x-4 mb-8">
            <!-- Avatar -->
            <div class="relative w-24 h-24 group">
                <img src="<%= user.avatar || '/Images/default/avatar.png' %>" alt="Avatar"
                    class="w-24 h-24 rounded-full object-cover border-4 border-white cursor-pointer shadow-md transition-transform duration-200 group-hover:scale-105"
                    id="avatarPreview">
                <form action="/profile/upload-avatar" method="POST" enctype="multipart/form-data">
                    <input type="file" name="avatar" id="avatarInput" class="hidden" accept="image/*">
                </form>
                <div class="absolute bottom-0 right-0 bg-blue-500 text-white rounded-full p-1 shadow-md cursor-pointer opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                    id="changeAvatarBtn">✎</div>
            </div>
            <h2 class="text-3xl font-semibold">
                <%= user.name %>
            </h2>
            <p class="text-zinc-400">@<%= user.username %> • Age <%= user.age || 'N/A' %>
            </p>
        </div>

        <!-- Create Post -->
        <section class="mb-12">
            <h3 class="text-xl font-semibold mb-3">Create a new post</h3>
            <form action="/post" method="POST" enctype="multipart/form-data" class="space-y-3">
                <textarea
                    class="w-full p-3 rounded-lg bg-zinc-800 border border-zinc-700 outline-none focus:border-blue-500 transition resize-none"
                    rows="3" placeholder="What's on your mind?" name="content"></textarea>
                <div class="flex items-center space-x-3">
                    <button type="button" id="chooseFileBtn"
                        class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg font-medium transition">Choose
                        Image</button>
                    <span id="fileName" class="text-zinc-400 text-sm">No file selected</span>
                    <input type="file" name="fileContent" id="fileContent" accept="image/*" class="hidden">
                </div>
                <div id="previewContainer" class="mt-3"></div>
                <button type="submit"
                    class="px-6 py-2 bg-blue-500 hover:bg-blue-600 rounded-lg font-medium transition">Post</button>
            </form>
        </section>

        <!-- User Posts -->
        <section>
            <h3 class="text-xl font-semibold text-zinc-300 mb-4">Your Posts</h3>
            <div class="space-y-4">
                <% user.posts.forEach(post=> { %>
                    <div class="p-5 bg-zinc-800 rounded-lg border border-zinc-700 shadow-md">
                        <div class="flex items-center mb-3">
                            <img src="<%= post.user.avatar || '/Images/default/avatar.png' %>"
                                class="w-10 h-10 rounded-full border border-zinc-600 mr-3">
                            <div>
                                <h4 class="text-blue-400 font-semibold">@<%= post.user.username %>
                                </h4>
                                <small class="text-zinc-500">
                                    <%= post.date ? new Date(post.date).toDateString() : '' %>
                                </small>
                            </div>
                        </div>
                        <% if(post.fileContent) { %>
                            <img src="<%= post.fileContent %>" alt="Post Image"
                                class="w-full h-64 object-cover rounded-lg mb-3 border border-zinc-700">
                            <% } %>
                                <p class="text-sm leading-relaxed mb-3">
                                    <%= post.content %>
                                </p>
                                <div class="flex items-center justify-between text-sm">
                                    <a href="/like/<%= post._id %>" class="text-blue-500 hover:underline transition">
                                        <%= (post.likes || []).includes(user._id.toString()) ? "Unlike" : "Like" %>
                                    </a>
                                    <span class="text-zinc-400">
                                        <%= post.likes.length %> likes
                                    </span>
                                    <a href="/post-delete/<%= post._id %>"
                                        class="text-zinc-500 hover:text-zinc-300">Delete</a>
                                    <a href="/edit/<%= post._id %>" class="text-zinc-500 hover:text-zinc-300">Edit</a>
                                </div>
                    </div>
                    <% }) %>
            </div>
        </section>

    </main>

    <script>
        const accountDropdownBtn = document.getElementById('accountDropdownBtn');
        const accountDropdownMenu = document.getElementById('accountDropdownMenu');
        accountDropdownBtn.addEventListener('click', () => accountDropdownMenu.classList.toggle('hidden'));
        window.addEventListener('click', (e) => {
            if (!accountDropdownBtn.contains(e.target) && !accountDropdownMenu.contains(e.target)) {
                accountDropdownMenu.classList.add('hidden');
            }
        });

        // File input preview
        const fileInput = document.getElementById('fileContent');
        const chooseFileBtn = document.getElementById('chooseFileBtn');
        const fileName = document.getElementById('fileName');
        const previewContainer = document.getElementById('previewContainer');
        chooseFileBtn.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', () => {
            previewContainer.innerHTML = '';
            if (fileInput.files.length > 0) {
                const file = fileInput.files[0];
                fileName.textContent = file.name;
                if (file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = e => {
                        const img = document.createElement('img');
                        img.src = e.target.result;
                        img.className = "w-32 h-32 object-contain rounded-lg border border-zinc-700 bg-black";
                        previewContainer.appendChild(img);
                    };
                    reader.readAsDataURL(file);
                }
            } else fileName.textContent = "No file selected";
        });

        // Avatar upload
        const avatarPreview = document.getElementById('avatarPreview');
        const avatarInput = document.getElementById('avatarInput');
        const changeAvatarBtn = document.getElementById('changeAvatarBtn');
        avatarPreview.addEventListener('click', () => avatarInput.click());
        changeAvatarBtn.addEventListener('click', () => avatarInput.click());
        avatarInput.addEventListener('change', () => { if (avatarInput.files.length > 0) avatarInput.parentElement.submit(); });

        // Cover upload
        const coverPreview = document.getElementById('coverPreview');
        const coverInput = document.getElementById('coverInput');
        const changeCoverBtn = document.getElementById('changeCoverBtn');
        coverPreview.addEventListener('click', () => coverInput.click());
        changeCoverBtn.addEventListener('click', () => coverInput.click());
        coverInput.addEventListener('change', () => { if (coverInput.files.length > 0) coverInput.parentElement.submit(); });
    </script>

</body>

</html>